extends layout
block content  
  section.hero-wrap.hero-wrap-2(style="background-image: url('images/bg_4.jpg');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-center.justify-content-center
      .col-md-9.ftco-animate.text-center
        h1.mb-2.bread Contact Us
        p.breadcrumbs
          span.mr-2
            a(href='index.html')
              | Home 
              i.ion-ios-arrow-forward
          span
            | Contact 
            i.ion-ios-arrow-forward
  section.ftco-section.contact-section.bg-light
    .container
      .row.d-flex.mb-5.contact-info
        .col-md-12.mb-4
          h2.h4.font-weight-bold Contact Information
        .w-100
        .col-md-3.d-flex
          .dbox
            p
              span Address:
              |  198 West 21th Street, Suite 721 New York NY 10016
        .col-md-3.d-flex
          .dbox
            p
              span Phone:
              a(href='tel://1234567920') + 1235 2355 98
        .col-md-3.d-flex
          .dbox
            p
              span Email:
              a(href='mailto:info@yoursite.com') info@yoursite.com
        .col-md-3.d-flex
          .dbox
            p
              span Website
              a(href='#') yoursite.com
  section.ftco-section.ftco-no-pt.ftco-no-pb.contact-section
    .container
      .row.d-flex.align-items-stretch.no-gutters
        .col-md-6.p-5.order-md-last
          h2.h4.mb-5.font-weight-bold Contact Us
          form(action='#')
            .form-group
              input.form-control(type='text' placeholder='Your Name')
            .form-group
              input.form-control(type='text' placeholder='Your Email')
            .form-group
              input.form-control(type='text' placeholder='Subject')
            .form-group
              textarea.form-control(name='' id='' cols='30' rows='7' placeholder='Message')
            .form-group
              input.btn.btn-primary.py-3.px-5(type='submit' value='Send Message')
        .col-md-6.d-flex.align-items-stretch
          #map